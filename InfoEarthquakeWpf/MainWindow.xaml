<Window x:Class="InfoEarthquakeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoEarthquakeWpf"
        mc:Ignorable="d"
        Title="EarthquakeInfo" Height="450" Width="800" Style="{DynamicResource WindowStyle}">
    <Window.Resources>
        <ResourceDictionary Source="EartquakeTheme.xaml"/>
    </Window.Resources>

    <Grid>
        <DataGrid x:Name="itemsDataGrid" HorizontalAlignment="Left" Height="224" VerticalAlignment="Bottom" Width="792" Margin="0,0,0,195"/>
        <TextBox Name="countRecordsTextBox" HorizontalAlignment="Left" Height="23" Margin="41,0,0,108" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="120"/>
        <Button Name="showButton" Content="Показать" HorizontalAlignment="Left" Margin="166,0,0,108" VerticalAlignment="Bottom" Width="75" Height="23" Click="ShowButtonClick"/>
        <Button Name="infoButton" Content="Просмотреть(Выберите строку)" HorizontalAlignment="Left" Margin="596,0,0,172" VerticalAlignment="Bottom" Width="186" Click="InfoButtonClick"/>

    </Grid>
</Window>
